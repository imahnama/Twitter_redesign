<div class="form">

<%= form_for (@user), :url => users_path do |f| %>

 <h1>Sign Up</h1>
<div class="form-group">
  <%= f.label :Username %> <br>
  <%= f.text_field :Username, placeholder: "Enter Username", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :Fullname %> <br>
  <%= f.text_field :FullName, placeholder: "Enter Fullname", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :Photo %> <br>
  <%= f.file_field :Photo %>
</div>

<div class="form-group">
  <%= f.label :CoverImage %> <br>
  <%= f.file_field :CoverImage %>
</div>

<div class="form-group">
  <%= f.submit "Sign Up", class: "form-control"%>
</div>

<div class="form-group">
    <%= link_to "Have an Account? Login in", login_path %>
</div>

<% end %>

</div>
